            position: absolute;
            left: 0;
            top: 0px;
            z-index: 10;
            width: 100%;
            height: 100%;
            stroke-width: 10px;
            stroke: var(--swiper-theme-color);
            fill: var(--GWhite);
            stroke-dashoffset: calc(125.6 * (1 - var(--progress)));
