        }

        #navlist {
            min-width: 600px;
            display: flex;
            justify-content: space-between;
            margin: 0 100px 0 0;
        }

        #navlist svg {
            width: fit-content;
            height: fit-content;
            color: var(--Brown01);
        }

        /*線段hover功能*/
        nav>div#navlist>a:after,
        nav>div>a>p:after {
            display: block;
            content: '';
            border-bottom: solid 2px var(--Brown01);
            transform: scaleX(0);
            transform-origin: 0%;
            transition: transform 250ms ease-in-out;
        }

        nav>div#navlist>a:hover:after,
