<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="js/jquery-3.6.0.js"></script>
    <link rel="stylesheet" href="css/main_ginnychen19.css">
    <link rel="stylesheet" href="css/BEndOrder.css">
    <link rel="stylesheet" href="css/customer.css">
    <title>commodity</title>
</head>
<body>
    <div id="BEndleft">
        <div class="BEndnav">
            <div>
                <img src="Source/SVG/Weed.svg">
                <h6>後臺管理系統</h6>
                <p>使用者：abuser</p>
            </div>
            <div>
                <div>
                    <div>
                        <img src="Source/SVG/Weed.svg">
                        <h6>商品管理</h6>
                    </div>
                    <p1><a href="/commodity">商品列表</a></p1>
                    <p1><a href="/additem">新增商品</a></p1>
                </div>
                <div>
                    <div>
                        <img src="Source/SVG/Weed.svg">
                        <h6>訂單管理</h6>
                    </div>
                    <p1><a href="/C05_2/1">一般訂單</a></p1>
                    <p1><a href="/C05_3/1">客製訂單</a></p1>
                </div>
                <div>
                    <div>
                        <img src="Source/SVG/Weed.svg">
                        <h6>會員相關</h6>
                    </div>
                    <p1><a href="/manage">會員資料</a></p1>
                </div>
            </div>
        </div>
    </div>
    <div id="BEndright">
        <div id="PMcakeOrder">
            <div>
                <h6>商品列表</h6>
                <div class="search-container">
                    <input type="button" class="search-icon"></input>
                    <input type="text" class="search-input" placeholder="Search...">
                </div>
            </div>
            <table class="Order">
                <thead>
                    <tr>
                        <td>蛋糕ID</td>
                        <td>蛋糕名稱</td>
                        <td>蛋糕價格</td>
                        <td>類別</td>
                    </tr>
                </thead>
                <% data.forEach((item,index)=>{ %>
                    
                <tbody>
                    <tr class="list">
                        <td><%= item.c_id %></td>
                        <td><%= item.c_name %></td>
                        <td><%= item.price %></td>
                        <td><%= item.c_class %></td>
                        <td>
                            <button>修改</button>
                        </td>
                    </tr>
                    <tr class="detail">
                        <td colspan="8">
                            <div class="customer">
                                <form enctype="multipart/form-data" id=<%= item.c_id %>  >
                                    <div>
                                        <table>
                                            <tr>
                                                <td>蛋糕ID：</td>
                                                <td>
                                                    <!-- <textarea cols="40" rows="2" name="illustrate" id=""  required><%= item.illustrate %> </textarea></td> -->
                                                    <input type="text" name="c_id" id="c_id" value=<%= item.c_id %>></td>
                                            </tr>
                                            <tr>
                                                <td>蛋糕名稱：</td>
                                                <td><input type="text" name="c_name" value=<%= item.c_name %> required></td>
                                            </tr>
                                            <tr>
                                                <td>價格：</td>
                                                <td><input type="number" name="price" value=<%= item.price %> required></td>
                                            </tr>
                                        </table>
                                        <table>
                                            
                                            <tr>
                                                <td>文案：</td>
                                                <td>
                                                    <textarea cols="40" rows="2" name="illustrate" required><%= item.illustrate %></textarea>
                                                        
                                                
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>圖片：</td>
                                                <td>
                                                   <input type="text" readonly style="width:20em;" id="imgId<%= item.c_id %>" name="img_name" value=<%= item.img_name %>  >
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>類別：</td>
                                                <td>
                                                    <input type="text" name="c_class" value=<%= item.c_class %> >
                                                        
                                                </td>
                                            </tr>
                                        </table>
                                    </div>
                                    <div>
                                        <input type="file" name="img" id="img<%= item.c_id %>" accept="image/*" >
                                        <input type="button" class="btn_red" onclick="doUpImg('<%= item.c_id %>')"  value="上傳圖片">
                                        <input type="button" onclick="doUpdata('<%= item.c_id %>')" value="更新資料">
                                        
                                    </div>
                                </form>
                            </div>
                        </td>
                    </tr>
                </tbody>
                <% })  %>
                <tfoot>
                   
                </tfoot>
            </table>
        </div>
    </div>
    <script src="js/BEndOrder.js"></script>
    <script src="js/findNav.js"></script>
    <script>
        function doUpdata(id){
            alert(id);
              var data = $(`#${id}`).serializeArray();
            
            var JSONData = {oldId:id};
            for (index in data) {
                JSONData[data[index].name] = data[index].value;
            }

            console.log(JSONData)
            $.ajax({
                url: "/commodity",
                type: "POST",
                contentType: "application/json; charset=utf-8",
                data: JSON.stringify(JSONData),
                success: function(res) {
                    // alert(res);
                    location.href = '/commodity';
                },
                error: function() {
                    alert("login 系統錯誤!")
                }
            })
        }

        function doUpImg(id){
            let file = $('#img'+id)[0].files[0];
            console.log(file)
            let formData = new FormData();
            formData.append("img", file);
             $.ajax({
                 url: "/upimg",
                 type: "POST", 
                 // contentType: "application/json; charset=utf-8",
                 contentType: false,
                 processData: false,
                 // data: JSON.stringify(JSONData),
                 data:formData,
                 success: function(res) {
                    //  alert(res);
                    $('#imgId'+id).val(res);
                    
                 },
                 error: function() {
                     alert("login 系統錯誤!")
                 }
             })

        }
    </script>
</body>
</html>