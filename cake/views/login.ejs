<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="js/jquery-3.6.0.js"></script>
    <title>登入</title>
</head>
<body>

    <form id="formLogin">
        <!-- 帳號: <input type="text" name="account" value="user@gmail.com"> -->
        帳號: <input type="text" name="account" value="abc123@gmail.com">
        密碼: <input type="password" name="password" value="1234">
        <button type="button" id="submit">送出</button>
    </form>
    <a href="/member"><button id="sign">註冊</button></a>

    <script>
    
        $('#submit').on('click', function() {
            var data = $('#formLogin').serializeArray();
            
            var JSONData = {};
            for (index in data) {
                JSONData[data[index].name] = data[index].value;
            }
                     
            $.ajax({
                url: "/login",
                type: "POST",
                contentType: "application/json; charset=utf-8",
                data: JSON.stringify(JSONData),
                success: function(res) {
                    alert(res);
                    location.href = '/';
                },
                error: function() {
                    alert("login 系統錯誤!")
                }
            })
        })
    </script>
</body>
</html>